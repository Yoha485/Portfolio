---
import MainPageSociall from './MainPageSociall.astro';
import Marginer from './Marginer.astro';
import CV from './CV.astro';

import { mainPageTitle, mainPageDescription, mainPageTitleForMobile } from '../constants/MainPage';
---

<section id="intro">
  <Marginer margin="20px" />
  <h1 class="desktop-only">{mainPageTitle}</h1>
  <h1 class="mobile-only">{mainPageTitleForMobile}</h1>
  <div class="description-and-cv">
    <div>
      <h2>{mainPageDescription}</h2>
      <Marginer margin="70px" mobileMargin='45px' />
      <MainPageSociall />
    </div>

    <div class="cv desktop-only">
      <CV />
    </div>
  </div>
</section>

<style>
  h1 {
    text-fill-color: transparent;
    background: linear-gradient(90.02deg, #06fdd8 1.06%, #0e9aff 102.58%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;

    font-weight: bold;
    font-size: 74px;
    line-height: 100%;
  }

  h2 {
    font-size: 22px;
    font-weight: normal;
    line-height: 120%;

    margin-top: 15px;
  }

  h1,
  h2 {
    white-space: pre-line;
  }

  .description-and-cv {
    display: flex;
    justify-content: space-between;
  }

  .cv {
    margin-top: 10px;
    margin-right: 8%;
  }

  @media (min-width: 1600px) {
    h1 {
      font-weight: bold;
      font-size: 120px;
      line-height: 100%;
    }

    h2 {
      font-size: 28px;
      margin-top: 25px;
    }

    .cv {
      margin-right: 15%;
    }
  }

  @media (max-width: 1000px) {
    h1 {
      font-size: 56px;
      margin-top: 40px;
    }

    h2 {
      font-size: 18px;
      margin-top: 25px;
    }

    .description-and-cv {
      display: block;
    }
  }
</style>
