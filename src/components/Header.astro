---
import Button from './Button.astro';

const items = [
  {
    name: 'Main',
    href: '/'
  },
  {
    name: 'Projects',
    href: '/#projects'
  },
  {
    name: 'Posts',
    href: '/posts'
  },
  {
    name: 'Contacts',
    href: '#footer'
  }
];
---

<header id="header">
  <nav>
    {
      items.map((item) => (
        <Button>
          <a href={item.href}>{item.name}</a>
        </Button>
      ))
    }
  </nav>
</header>

<style>
  nav {
    height: 120px;

    display: flex;
    justify-content: flex-end;
    align-items: center;
    column-gap: 60px;

    font-weight: 500;
    font-size: 18px;
    line-height: 27px;
  }

  @media (min-width: 1600px) {
    nav {
      font-size: 22px;
    }
  }
</style>
