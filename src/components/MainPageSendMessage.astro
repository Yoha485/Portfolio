---
import Marginer from './Marginer.astro';
---

<section>
  <img src="/MainPage/photo.png" alt="No Photo" class="center" />
  <p>Anton Morozov</p>
  <Marginer margin={'60px'} />
</section>

<style>
  img,
  p,
  textarea {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  img {
    width: 15%;
  }

  p {
    text-align: center;
    font-size: 28px;
    line-height: 100%;
  }

  @media (max-width: 1000px) {
    img {
      width: 30%;
    }

    p {
      font-size: 20px;
    }
  }
</style>
